# ===========================================
# Production Environment Variables
# Copy this file to .env and fill in values
# ===========================================

# Database Configuration
DATABASE_USERNAME=strapi
DATABASE_PASSWORD=your_secure_password_here
DATABASE_NAME=strapi

# Strapi Security Keys (generate unique values!)
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here
ADMIN_JWT_SECRET=your_admin_jwt_secret_here
APP_KEYS=key1,key2,key3,key4
API_TOKEN_SALT=your_api_token_salt_here
TRANSFER_TOKEN_SALT=your_transfer_token_salt_here

# Public URL (your domain)
NEXT_PUBLIC_STRAPI_URL=https://your-domain.com

# Optional: DigitalOcean Spaces (for media uploads)
# DO_SPACE_ACCESS_KEY=your_space_access_key
# DO_SPACE_SECRET_KEY=your_space_secret_key
# DO_SPACE_ENDPOINT=nyc3.digitaloceanspaces.com
# DO_SPACE_BUCKET=your-bucket-name
# DO_SPACE_CDN=https://your-bucket.nyc3.cdn.digitaloceanspaces.com
